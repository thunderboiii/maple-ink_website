    <script src="/scripts/effects.js" defer></script>
</head>
<body>
    {% include "header.njk" %}

    <main>
        {{ content | safe}}

        <div id="take-a-look"></div>
    </main>

    {% include "footer.njk" %}

    <script>
        if (window.netlifyIdentity) {
          window.netlifyIdentity.on("init", user => {
            if (!user) {
              window.netlifyIdentity.on("login", () => {
                document.location.href = "/admin/";
              });
            }
          });
        }
    </script>
</body>
